<html >
@{
    ViewBag.Title = "MVC with AngularJS Consuming WCF Service";
}

<body data-ng-app="RESTModule">

    <table id="tblContainer" data-ng-controller="Angular_RESTController">
        <tr>
            <td>
                <table style="border: solid 2px #808080; padding: 5px; margin-left:auto; margin-right:auto">
                    <tr style="height: 30px; background-color: skyblue; color: #ff6a00;">
                        <th></th>
                        <th>ID</th>
                        <th>Name</th>
                        <th>City</th>
                        <th>State</th>
                        <th></th>

                    </tr>
                    <tbody data-ng-repeat="tsk in Tasks">
                        <tr>
                            <td></td>
                            <td><span>{{tsk.TaskID}}</span></td>
                            <td><span>{{tsk.Name}}</span></td>
                            <td><span>{{tsk.City}}</span></td>
                            <td><span>{{tsk.State}}</span></td>
                            <td>
                                <input type="button" id="Edit" value="Edit" data-ng-click="get(tsk)" />
                            </td>

                            <td>
                                <input type="button" id="Delete" value="Delete" data-ng-click="delete(tsk)" />
                            </td>
                        </tr>
                    </tbody>
                </table>

            </td>
        </tr>
        <tr>
            <td>
                <div style="color: red;">{{Message}}</div>
                <table style="border: solid 4px Red; padding: 2px;">
                    <tr>
                        <td></td>
                        <td>
                            <span>Task ID</span>
                        </td>
                        <td>
                            <input type="text" id="TaskID" readonly="readonly" data-ng-model="TaskID" />
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <span>Task Name</span>
                        </td>
                        <td>
                            <input type="text" id="tName" required data-ng-model="Name" />
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <span>City</span>
                        </td>
                        <td>
                            <input type="text" id="tCity" required data-ng-model="City" />
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <span>State</span>
                        </td>
                        <td>
                            <input type="text" id="tState" required data-ng-model="State" />
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td>
                            <input type="button" id="save" value="Save Task" data-ng-click="save()" />

                            <input type="button" id="Clear" value="Clear Task" data-ng-click="clear()" />
                        </td>
                    </tr>
                </table>

            </td>
        </tr>

    </table>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/appScripts/Modules.js"></script>
    <script src="~/Scripts/appScripts/Services.js"></script>
    <script src="~/Scripts/appScripts/Controllers.js"></script>
</body>

</html>
